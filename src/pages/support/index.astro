---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import SheetsBackground from "@components/SheetsBackground.astro";
import DiscordButton from "@components/DiscordButton.astro";
---

<Layout title="Support - RetroBooks">
  <main class="text-white">
    <Container>
      <div class="grid grid-cols-1 p-10 min-h-screen">
        <div class="flex flex-col items-center justify-center col-span-1">
          <h1 class="md:text-5xl p-5 text-2xl text-center text-white mb-10">
            Support RetroBooks
          </h1>
          <p class="text-white xl:px-96 my-14">
            Our RetroBooks support system is focused on Discord! We invite you
            to join and open a ticket in case of questions or problems with the
            product.
          </p>
          <DiscordButton text="DISCORD COMMUNITY" />
        </div>
      </div>
      <SheetsBackground />
    </Container>
  </main>
</Layout>

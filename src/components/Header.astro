---
import Logo from "./Logo.astro";
---

<header
  class="flex item-center m-auto w-full bg-retro-black py-3 px-4 gap-x-8 h-20"
>
  <div class="flex md:flex-col h-full md:gap-4 w-full justify-between">
    <nav>
      <div class="mx-16">
        <Logo />
      </div>
      <div>
        <div class="md:rounded-full md:m-auto">
          <ul class="flex items-end justify-end w-full">
            <li class="mx-2">
              <a class="group transition text-white" href="/" title="{name}">
                Enlace</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
